---
//This is for SSR (Server Side Rendering) with Astro
import MainLayout from "../../layouts/MainLayout.astro";
import Tags from "../../components/Tags.astro";
import { getEntry } from "astro:content";
import { formatDate } from "../../utils";

const { slug } = Astro.params;

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);
if (entry === undefined) {
  return Astro.redirect("/404");
}

const { Content } = await entry.render();
---

<MainLayout>
  <a
    href="/articles"
    class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
    >Back To Articles</a
  >
  <article>
    <h1 class="text-4xl font-bold mb-2">{entry.data.title}</h1>
    <h3 class="text-lg mb-2">
      Written by {entry.data.author} on {formatDate(entry.data.pubDate)}
    </h3>
    <Tags tags={entry.data.tags} />
    <img
      src={"/images/" + entry.data.image}
      alt="Article Image"
      class="w-full h-auto rounded-xl my-6"
    />
    <Content />
  </article>
</MainLayout>

<style is:global>
  p {
    @apply my-5 mx-0;
  }

  h1 {
    @apply my-5 mx-0;
    @apply text-3xl font-bold;
  }

  h2 {
    @apply my-5 mx-0;
    @apply text-2xl;
  }

  h3 {
    @apply my-5 mx-0;
    @apply text-2xl font-bold;
  }

  ul {
    @apply pl-10; /* Add some padding to the left of the list */
  }

  ul li {
    list-style-type: circle; /* Change the bullet points to circles */
    @apply mb-2.5; /* Add some margin to the bottom of each list item */
  }

</style>
