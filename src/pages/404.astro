---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---
<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center h-screen">
    <Image src={error} alt="404 - Page Not Found" class="w-1/2" />
    <h1 class="text-4xl font-bold mt-4">404 - Page Not Found</h1>
    <p class="text-lg mt-4 mb-4">The page you are looking for does not exist.</p>
    <a href="/" 
    class="inline-block bg-indigo-100 p-2 mb-6 hover:bg-indigo-300 hover:text-white">
        Go Back Home</a>
</div>