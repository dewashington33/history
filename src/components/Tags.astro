---
import Capitalize from "../components/Capitalize.astro";
const { tags } = Astro.props;
interface Props {
  tags: string[];
}
---

<div class="flex flex-wrap gap-2 pb-6">
  {
    tags.map((tag: string, index: number) => (
      <span
        class={
          index % 2 === 0
            ? "px-2 py-1 bg-blue-500 text-white rounded-full text-sm hover:opacity-90"
            : "px-2 py-1 bg-indigo-500 text-white rounded-full text-sm hover:opacity-90"
        }
      >
        <a href={"/articles/tag/" + tag}>#<Capitalize str={tag} /></a>
      </span>
      
    ))
  }
</div>
