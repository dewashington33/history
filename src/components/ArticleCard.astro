---
import Time from "../components/Time.astro";
import type { CollectionEntry } from "astro:content";
import Tags from "../components/Tags.astro";

const { article } = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}
---

<div class="max-w-md mx-auto mt-10 flex flex-col">
  <div class="bg-white rounded-lg overflow-hidden shadow-lg flex flex-col h-full">
    <a href={"/articles/" + article.slug} class="h-48 flex-shrink-0">
      <img
        src={"/images/" + article.data.image}
        alt="Article Image"
        class="w-full h-full object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <div class="p-6 flex-grow">
      <h2 class="text-2xl font-semibold mb-2">
        <a href={"/articles/" + article.slug}> {article.data.title} </a>
      </h2>
      <h3 class="text-xl font-semibold mb-2">
        <a href={"/articles/" + article.slug}> {article.data.subtitle} </a>
      </h3>
      <p class="text-gray-600 text-sm mb-4">
        <Time date={article.data.pubDate} />
      </p>
      <Tags tags={article.data.tags} />
    </div>
  </div>
</div>